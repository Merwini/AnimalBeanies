<Defs>

<ThingCategoryDef>
	<defName>Nuff_AnimalHat</defName>
	<label>Animal Hats</label>
	<parent>Headgear</parent>
</ThingCategoryDef>

<ThingDef Name="NuffAnimalHatQuestBase" ParentName="HatBase" Abstract="True">
	<graphicData>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<thingCategories>
		<li>Nuff_AnimalHat</li>
	</thingCategories>
	<apparel>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<developmentalStageFilter>Child, Adult</developmentalStageFilter>
		<bodyPartGroups>
			<li>UpperHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>AnimalHat</li>
		</tags>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<smeltable>false</smeltable>
</ThingDef>

<ThingDef Name="NuffAnimalHatMakeableBase" ParentName="HatMakeableBase" Abstract="True">
	<recipeMaker>
		<researchPrerequisite>ComplexClothing</researchPrerequisite>
		<recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
		</recipeUsers>
		<skillRequirements>
			<Crafting>8</Crafting>
			<Artistic>4</Artistic>
		</skillRequirements>
	</recipeMaker>
	<costList>
		<Cloth>50</Cloth>
		<Dye>1</Dye>
	</costList>
	<thingCategories>
		<li>Nuff_AnimalHat</li>
	</thingCategories>
	<graphicData>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<statBases>
		<MaxHitPoints>100</MaxHitPoints>
		<WorkToMake>3600</WorkToMake>
		<Mass>0.12</Mass>
		<EquipDelay>0.8</EquipDelay>
	</statBases>
	<apparel>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<developmentalStageFilter>Child, Adult</developmentalStageFilter>
		<bodyPartGroups>
			<li>UpperHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>AnimalHat</li>
		</tags>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
</ThingDef>

